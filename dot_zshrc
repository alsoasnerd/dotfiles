# load starship
eval "$(starship init zsh)"

# exports
export EDITOR='nvim'
export OPENAI_API_KEY="";
export BROWSER='vivaldi-stable'
export SAVEHIST=1000000000000000000
export HISTSIZE=1000000000000000000
export HISTFILE=~/.zsh_history
export BSPDIR=/home/alsoasnerd/.config/bspwm

# fyw
export FYW_DIR="/home/alsoasnerd/.config/fyw"
export FYPM_DIR="/home/alsoasnerd/.config/fyw/fypm"
export FYSM_DIR="/home/alsoasnerd/.config/fyw/fysm"
export BSPLOCK=/tmp/fysm/bspwm.lock

# set zsh options
setopt appendhistory
setopt SHARE_HISTORY

# set zsh keybinds
bindkey '^R' history-incremental-search-backward

# add ~/.zsh to fpath
fpath=(~/.zsh $fpath)

# load zsh-autosuggestions
source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# load zsh plugins
autoload -U compinit
compinit -i

# ls
alias ls='exa --icons'
alias l='ls -lh'
alias ll='ls -lah'
alias la='ls -A'
alias lm='ls -m'
alias lr='ls -R'
alias lg='ls -l --group-directories-first'

# git
alias gcl='git clone --depth 1'
alias gi='git init'
alias ga='git add'
alias gc='git commit -m'
alias gp='git push origin master'

# bat
alias bat='bat --style=auto'

# tmuxp
alias ctm='tmuxp load ~/.config/tmuxp/dev.yaml' # ctm is an acronym for code, task, monitor

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# distrotunnel
# source /home/alsoasnerd/.local/share/distrobox/distrotunnel/distrotunnel.zsh

# set keyboard layout
# setxkbmap -layout us -variant altgr-intl

# Add cargo, bash scripts and nix to path
export PATH="$HOME/.local/bash:$HOME/.config/llamafile/models:$HOME/.cargo/bin:$PATH"

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/alsoasnerd/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/alsoasnerd/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/alsoasnerd/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/alsoasnerd/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# load fzf history
source <(fzf --zsh)
source $FYW_DIR/config/fywrc

# Mise setup
eval "$(/home/alsoasnerd/.local/bin/mise activate zsh)"

# load zsh-syntax-highlighting, should be last line
source ~/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

fastfetch
